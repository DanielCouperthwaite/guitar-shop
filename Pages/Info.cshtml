@page "{name}"
@model MyApp.Namespace.InfoModel
@{
    ViewData["Title"] = "Info page";
}

<div class="text-center">
    <h1 class="display-4">@Model.CurrentGuitar.Name</h1>
    <p>Find details Below!</p>
</div>

<div class="container row justify-content-center">
        <div class="card" style="width: 24rem;">
            <div class="row no-gutters">
               <div class="col-md-4">
            <img class="card-img" src=@Model.CurrentGuitar.ImageSrc alt=@Model.CurrentGuitar.Name>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4>£@Model.CurrentGuitar.Price</h4>
                <p class="card-text">@Model.CurrentGuitar.Description</p>
                <p class=@(Model.CurrentGuitar.Available ? "text-success" : "text-danger")> @(Model.CurrentGuitar.Available ? "Available from our " + @Model.CurrentGuitar.Location + " branch.": "Out Of Stock")</p>
            </div>
        </div>
            </div>
        </div>
</div>

<div class="container row justify-content-center">
    <a asp-page="/Stock" class="btn btn-primary w-25">Back</a>
</div>